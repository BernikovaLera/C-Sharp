<Window x:Class="registration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="500" Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Text="Name:"/>
            <TextBlock Text="Surname:"/>
            <TextBlock Text="Patronymic:"/>
            <Button x:Name="Button" Content="Список&#xD;&#xA;пользователей" Click="Button_Click_1" Height="40"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBox x:Name="name"/>
            <TextBox x:Name="surname"/>
            <TextBox x:Name="patroniymic"/>
            <Button x:Name="Add_Button" Content="Save" Click="Add_Button_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
